<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme -->
    <style name="Theme.ProTrack" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color -->
        <item name="colorPrimary">@color/primary_blue</item>
        <item name="colorPrimaryVariant">@color/dark_blue</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary brand color -->
        <item name="colorSecondary">@color/status_orange</item>
        <item name="colorSecondaryVariant">@color/status_yellow</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Status bar color -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/primary_blue</item>

        <!-- Background colors -->
        <item name="android:windowBackground">@color/background_light</item>

        <!-- Customize your theme here -->
        <item name="android:textColorPrimary">@color/dark_text</item>
        <item name="android:textColorSecondary">@color/gray_text</item>
    </style>
</resources>